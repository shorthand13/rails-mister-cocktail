<div class="container">

  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-4 col-md-6 col-md-offset-3">

      <div class="form-login">
        <h2>Add cocktail</h2>
        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name, placeholder: "martini" %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.button :submit,  class: 'btn btn-warning btn-md' %>
        <% end %>
      </div>

    </div>
  </div>

</div>
